<% flash.each do |type, msg| %>
    <div>
    <%= msg %>
    </div>
<% end %>
<h1>Add Recipe</h1>
<%= form_with url: user_recipes_path, method: :post, local: true, scope: :recipe do |f| %>
    <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :preparation_time %><br>
        <%= f.text_field :preparation_time %>
    </p>
    <p>
        <%= f.label :cooking_time %><br>
        <%= f.text_field :cooking_time %>
    </p>
    <p>
        <%= f.label :description %><br>
        <%= f.text_area :description %>
    </p>
    
    <p>
        <%= f.submit %>
    </p>
<%end%>